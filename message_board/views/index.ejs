<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Board</title>
    </head>
    <body>
    	<div class="container">
            <div class="row">

    		<h1>The Dojo Message Board</h1>
            <hr/><hr/>

    	<form action="/messages" method="post">
    		<label>Name:</label></br>
            <input type="text" name="name"></br>
            <label>Message:</label></br>
    		<textarea name="message" rows="5" cols="80"></textarea></br>
    		<button type="submit" name="button">Submit Message</button>
    	</form>

    	 <% if(typeof(errors) != 'undefined' ) { %>
    	     <% for (var x in errors) { %>
    	      <h3><%= errors[x].message %></h3>
    	     <% } %>
     	 <% } else { %>

     	 	<div>
    			<% for(x in messages) { %>
    				<div>
    					<h3>Name: <%= messages[x].name %></h3>
    					<h3>Message: <%= messages[x].message %></h3>

    					<% for (y in messages[x]._comments) { %>
    						<p><%= "Name: " + messages[x]._comments[y].name %></p>
    						<p><%= "Comment: " + messages[x]._comments[y].comment %></p>
    					<% } %>

    					<form action=<%= "/comments/" + messages[x]._id %> method="post">
    						<p class="margin">Name: </p><input class="comment_input" type="text" name="name">
    						<p class="margin">Comment: </p><textarea name="comment" rows="3" cols="50"></textarea></br>
    					    <button type="submit">Submit Comment</button>
    					</form>
                        <hr/>

    				</div>
    			<% } %>
    		</div>
     	<% } %>
    </div>
</div>

    </body>
</html>
