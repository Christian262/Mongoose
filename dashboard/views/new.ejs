            <form action="/" method="post">
                <label>Name:</label>
                <input type="text" name="name" placeholder="Dino name"><br/>
                <label>Cool Thing:</label>
                <input type="text" name="cool" placeholder="Cool thing about dino!"><br/>
                <label>Why would you have it as a pet:</label><br/>
                <textarea name="pet" rows="5" cols="50" value="Reasons to be a pet!"></textarea><br/>
                <button type="submit" name="submit">Submit dino!</button>
            </form>
            <a href="/">Home</a>
        </div>
    </body>
